{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/lib/*"]
    }
  },
  "include": ["src/lib/**/*", "src/test/zustund-store-preview.tsx", "src/test/access-validation-preview.tsx", "src/lib/data", "src/test/mock/products.ts", "src/test/test-components.tsx"],
  "exclude": ["dist", "node_modules"]
}
